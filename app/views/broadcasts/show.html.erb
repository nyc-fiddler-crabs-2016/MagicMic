<h1 id="broadcast-show-header" ><%= @broadcast.topic %></h1>
<h3><%= @broadcast.datetime %></h3>

<% if @broadcast.speaker == current_user %>
  <%= link_to "Cancel This Broadcast", broadcast_path(@broadcast), method: :delete %>
  <%= render 'megaphone' %>
<% else %>
  <%= render 'headphones' %>
<% end %>

<button id="open-or-join" data-room="room<%=@broadcast.id%>">listen</button>


<div id="videos-container"></div>
