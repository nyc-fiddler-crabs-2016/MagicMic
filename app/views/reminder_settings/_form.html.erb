<div id="reminder-settings-form">
  <%= form_for @reminder_setting do |f| %>
  <p>Would you like us to send you email or sms reminders?</p>
    <%= f.hidden_field :broadcast_id, value: @broadcast.id %>

    <%= f.check_box(:email_reminder) %>
    <%= f.label :email%>
    <%= f.check_box(:text_message) %>
    <%= f.label :text%>

    <%= f.submit :submit %>

  <% end %>
</div>
